@import 'FilteringSelectForGrid.css'
@import 'MoreInfoDialog.css'
@import 'Tag.css'
@import 'TagsContainer.css'
@import 'Health.css'

.catch
    [data-dojo-attach-point='gridDiv'], .bulk-upload-container
        margin-top 10px

    .dgrid-header
        right 0px

    .dgrid-scroller
        overflow-y auto

    .dgrid-content:focus
        outline none

    .field-CATCH_ID
        width 35px

    .dgrid-grid
        border-left none
        border-right none
        border-bottom none

    .dgrid-row-odd
        background-color #f9f9f9

    .dgrid-selected
        background-color #E1EBF5

    .dgrid-cell.batch
        background-color #F9FFC0

    .dgrid th:focus,
    .dgrid-scroller:focus,
    .dgrid td:focus
        outline none

    .dgrid
        .field-FISH_ID,
        .field-PASS_NUM,
        .field-EVENT_ID,
        .field-NOTES
            display none

        .dgrid-cell
            vertical-align middle

        .combobox-container
            margin 0

        .dgrid-row.bold
            font-weight bold

    .dgrid-content .dgrid-cell-padding
        height 40px

    .btn-right-container>div
        display inline-block

    .btn-right-container .input-append
        margin-bottom 0

    .btn-right-container .popover-content
        padding 5px

    .btn-primary
        background-color #337ab7 + 25

        &.active
            background-color #286090 - 25

    // got from: https://www.abeautifulsite.net/whipping-file-inputs-into-shape-with-bootstrap-3
    .btn-file
        position relative
        overflow hidden
        input[type=file]
            position absolute
            top 0
            right 0
            min-width 100%
            min-height 100%
            font-size 100px
            text-align right
            opacity 0
            outline none
            background white
            cursor inherit
            display block

div[data-dojo-attach-point='batchForm'] .btn
    width 100%

.claro
    .dijitSpinner
        .dijitArrowButtonInner
            background-position: -142px center
        .dijitUpArrowButtonHover
            .dijitArrowButtonInner
                background-position: -142px center
        .dijitDownArrowButton
            .dijitArrowButtonInner
                background-position: -37px
        .dijitSpinnerButtonContainer
            width 16px
            height 32px
